### â”€â”€[ File Utilities ]â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€

# ğŸ“¦ Extract various archive types easily
extract() {
	if [[ -f "$1" ]]; then
		case "$1" in
		*.tar.bz2|*.tbz2)   tar xvjf "$1"    ;;
		*.tar.gz|*.tgz)     tar xvzf "$1"    ;;
		*.tar.xz)           tar xvJf "$1"    ;;
		*.tar)              tar xvf "$1"     ;;
		*.bz2)              bunzip2 "$1"     ;;
		*.gz)               gunzip "$1"      ;;
		*.rar)              unrar x "$1"     ;;
		*.zip)              unzip "$1"       ;;
		*.Z)                uncompress "$1"  ;;
		*.7z)               7z x "$1"        ;;
		*) echo "âŒ Cannot extract '$1': unsupported format" ;;
		esac
	else
		echo "âŒ '$1' is not a valid file"
	fi
}

# ğŸš€ Git add + commit + push with optional commit message
gitsync() {
	local msg="${1:-Uploaded @ $(date)}"
	git add .
	git commit -m "$msg"
	git push
}

# ğŸ“ Create an empty markdown file
mdfile() {
	touch "untitled.md"
	echo "ğŸ“ Created: untitled.md"
}

# ğŸš Create a starter ZSH script if it doesn't exist
zfile() {
	local file="untitled.zsh"
	if [[ ! -f "$file" ]]; then
		cat <<EOF > "$file"
#!/usr/bin/env zsh

#
# Version x.y.z
EOF
		chmod +x "$file"
		echo "ğŸ§© Created: $file"
	else
		echo "âš ï¸ File already exists: $file"
	fi
}

# ğŸ’½ Show disk usage in human-readable form
dfh() {
	df -h | grep -v tmpfs
}

