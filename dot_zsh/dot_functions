### â”€â”€[ Raspberry Pi & Local Deployment ]â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€

# ğŸŒ¡ï¸ Get CPU temperature (if `vcgencmd` is available)
get_temp() {
  if command -v vcgencmd >/dev/null; then
    vcgencmd measure_temp
  else
    echo "âš ï¸ vcgencmd not found. Is raspi-config installed?"
  fi
}

# ğŸ“ Show Raspberry Pi system status
pi-status() {
  echo "\n"
  echo "ğŸ“ Raspberry Pi Status"
  echo "-----------------------"
  echo "ğŸ“¦ Hostname:      $(hostname)"
  echo "ğŸ•’ Uptime:        $(uptime -p)"
  echo "ğŸŒ¡ï¸ CPU Temp:      $(get_temp)"
  echo "âš¡ Voltage:       $(vcgencmd measure_volts | cut -d '=' -f2)"
  echo "ğŸ“¦ Disk Usage:    $(df -h / | awk 'NR==2 {print $5}')"
  echo "ğŸŒ IP Address:    $(hostname -I | awk '{print $1}')"
}

# ğŸ¥§ Bake `tart.local` static site to live server dir
bake-tart() {
  local SRC="$HOME/@workspace/tart.local"
  local WWW="www"
  local DIR="/var/www/html"

  if [[ ! -d "$SRC/$WWW" ]]; then
    echo "âŒ Source folder '$SRC/$WWW' does not exist."
    return 1
  fi

  mkdir -p "$DIR"
  cp -r "$SRC/$WWW" "$DIR"
  echo "âœ… Copied '$WWW' from repo to '$DIR'"
}

### â”€â”€[ Audio Utilities ]â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
BONBON="tart.local:/mnt/mediastorage/Bonbon/Media/_inbox"

# ğŸ“¤ Push audio files to media server
# pushaudio ~/Music/track1.mp3 ~/Music/track2.mp3
pushaudio() {
  rsync -avh --no-owner --no-group "$@" --rsync-path="sudo rsync" "$BONBON"
}

# ğŸ§ Download from Soundgasm and upload to Raspberry Pi
# fetchSoundgasm "https://soundgasm.net/u/username/track-title"
fetchSoundgasm() {
  if [[ -z "$1" ]]; then
    echo "Usage: fetchSoundgasm <soundgasm URL>"
    return 1
  fi

  local URL="$1"
  echo "ğŸŒ Fetching Soundgasm page: $URL"

  local HTML MP3_URL DISPLAY_NAME FILENAME
  HTML=$(curl -s "$URL")
  MP3_URL=$(echo "$HTML" | grep -o 'https://media.soundgasm.net/sounds/[^"]*')

  if [[ -z "$MP3_URL" ]]; then
    echo "âŒ Could not find MP3 URL in page."
    return 1
  fi

  DISPLAY_NAME=$(echo "$HTML" | grep -oP '(?<=<div class="sgd-filename">)[^<]*' | head -n 1)
  if [[ -z "$DISPLAY_NAME" ]]; then
    echo "âš ï¸ No display name found â€” using basename."
    FILENAME=$(basename "$MP3_URL")
  else
    FILENAME="$(echo "$DISPLAY_NAME" | tr ' /' '__' | sed 's/[^a-zA-Z0-9._-]//g').mp3"
  fi

  echo "ğŸ§ Downloading as: $FILENAME"
  curl -L "$MP3_URL" -o "$FILENAME" > /dev/null

  echo "ğŸ“¤ Uploading $FILENAME to $BONBON"
  rsync -avh --no-owner --no-group "$FILENAME" --rsync-path="sudo rsync" "$BONBON" > /dev/null

  if [[ $? -eq 0 ]]; then
    echo "ğŸ—‘ï¸ Deleting local copy: $FILENAME"
    rm -f "$FILENAME"
  else
    echo "âš ï¸ Upload failed â€” keeping local copy."
  fi

  echo "âœ… All done!"
}

### â”€â”€[ Remote Sync Utilities ]â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€

# ğŸ”¼ Push to tartOS from local to remote
# push.tart ./bin "projects/tartOS/bin"
# rsync ./bin to user@12.879.1.130:projects/tartOS/bin
push.tart() {
  local source="$1"
  local destination="$2"

  if [[ -z "$source" || -z "$destination" ]]; then
    echo "Usage: push.tart <SOURCE> <DESTINATION>"
    return 1
  fi

  rsync -avh --progress "$source" "mina@192.168.1.130:$destination"
}

# ğŸ”½ Pull from tartOS from remote to local
# pull.tart ./bin "projects/tartOS/bin"
# rsync projects/tartOS/bin from user@12.879.1.130 to ./bin
pull.tart() {
  local source="$1"
  local destination="$2"

  if [[ -z "$source" || -z "$destination" ]]; then
    echo "Usage: pull.tart <SOURCE> <DESTINATION>"
    return 1
  fi

  rsync -avh --progress "mina@192.168.1.130:$source" "$destination"
}
